<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:paddingStart="@dimen/vertical_margin"
    android:paddingTop="@dimen/vertical_margin"
    android:paddingEnd="@dimen/vertical_margin"
    android:paddingBottom="@dimen/vertical_margin"
    android:orientation="vertical"
    tools:context=".view.WelcomeFragment">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/welcome_sentence"
        />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <Button
        android:id="@+id/btn_welcomeFragment_to_instructionsFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Continue" />

</LinearLayout>
</layout>
